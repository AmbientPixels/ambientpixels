{
  "navigationFallback": {
    "rewrite": "/404.html",
    "exclude": ["/images/*", "/*.css", "/*.js", "/*.json", "/*.svg", "/*.png", "/*.ico", "/*.jpg", "/*.jpeg", "/*.gif"]
  },
  "routes": [
    {
      "route": "/api/loadCardData",
      "methods": ["GET", "POST"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/api/loadCardData"
    },
    {
      "route": "/api/loadCardData/*",
      "methods": ["GET", "POST"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/api/loadCardData"
    },
    {
      "route": "/api/saveCardData",
      "methods": ["POST"],
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/cards",
      "methods": ["GET"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/api/cards"
    },
    {
      "route": "/api/myCards",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/cards/publish/*",
      "methods": ["POST"],
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "mimeTypes": {
    ".json": "text/json"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  }
}
